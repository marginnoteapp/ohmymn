{
  "name": "studyplan",
  "author": "ourongxing",
  "version": "0.0.1",
  "license": "MIT",
  "description": "",
  "scripts": {
    "dev": "tsx ./build.ts ",
    "zip": "cd ./dist && zip -qrm \"${npm_package_name}_v$npm_package_version.mnaddon\" *",
    "build": "NODE_ENV=production pnpm dev && pnpm zip",
    "build:test": "NODE_ENV=production pnpm dev",
    "build:iPad": "pnpm build && airdrop ./dist/studyplan*.mnaddon",
    "lint:fix": "eslint . --fix --ext .ts",
    "lint": "eslint . --ext .ts",
    "prettier": "prettier --write .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "prettier --write",
      "eslint --cache --fix",
      "git add"
    ]
  },
  "keywords": [
    "marginote",
    "addon",
    "typescript"
  ],
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@ourongxing/estrella": "^1.4.1",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "esbuild": "^0.14.48",
    "esbuild-plugin-mxn-copy": "^1.0.1",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.5.0",
    "prettier": "^2.7.1",
    "tsx": "^3.7.1",
    "typescript": "^4.7.4",
    "unplugin-auto-import": "^0.8.8"
  }
}
